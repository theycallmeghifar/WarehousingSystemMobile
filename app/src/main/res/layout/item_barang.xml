<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#fafafa"
            android:weightSum="2">

            <TextView
                android:background="#1565c0"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_gravity="left|center"/>

            <ImageView
                android:id="@+id/img_barang"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginEnd="2dp"
                android:layout_gravity="left|center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Code" />
                <TextView
                    android:id="@+id/txtItemCodeBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="11dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Code Value" />
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Name" />
                <TextView
                    android:id="@+id/txtItemNameBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="11dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Name Value" />
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Jumlah Item" />
                <TextView
                    android:id="@+id/txtJumlahItemBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="11dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Jumlah Item Value" />

                <TextView
                    android:id="@+id/txtNetQuantityBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Net Quantity Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtNamaPaletBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="11dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Nama Palet Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtNamaLemariBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Nama Lemari Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtNamaRakBarang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Nama Rak Value"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>