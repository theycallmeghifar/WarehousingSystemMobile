<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#fafafa"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_history_status"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="left|center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Code" />
                <TextView
                    android:id="@+id/txtItemCodeHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="11dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Code Value" />
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Name" />
                <TextView
                    android:id="@+id/txtItemNameHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="11dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Item Name Value" />
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Rak" />
                <TextView
                    android:id="@+id/txtNamaPaletHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="11dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Rak Value" />
                <TextView
                    android:id="@+id/txtJumlahMasukHistoryParent"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Jumlah Masuk" />
                <TextView
                    android:id="@+id/txtJumlahMasukHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Jumlah Masuk Value" />
                <TextView
                    android:id="@+id/txtJumlahKeluarHistoryParent"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Jumlah Keluar" />
                <TextView
                    android:id="@+id/txtJumlahKeluarHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Jumlah Keluar Value" />
                <TextView
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textSize="14dp"
                    android:textColor="#616161"
                    android:layout_gravity="center_horizontal"
                    android:text="Tanggal" />
                <TextView
                    android:id="@+id/txtTanggalHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Tanggal Value" />
                <TextView
                    android:id="@+id/txtNamaLemariHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Nama Lemari Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtNamaRakHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Nama Rak Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtMainItemCodeHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Main Item Code Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtMainItemNameHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Main Item Name Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtPurchaseOrderHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Purchase Order Value"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/txtDeliveryNoteHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="7dp"
                    android:textColor="#616161"
                    android:textSize="11dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Delivery Note Value"
                    android:visibility="gone"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>