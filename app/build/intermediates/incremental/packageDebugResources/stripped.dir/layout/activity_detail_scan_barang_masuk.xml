<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/FontApp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailScanBarangMasukActivity">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Konfirmasi Barang Masuk"
                android:textColor="#616161"
                android:textSize="25dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center">

                    <EditText
                        android:id="@+id/purchase_order_barang_masuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Purchase Order"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_scan_purchase_order_barang_masuk"
                    style="?android:textAppearanceSmall"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_alignParentRight="true"
                    android:text="SCAN"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    app:cornerRadius="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center">

                    <EditText
                        android:id="@+id/delivery_note_barang_masuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Delivery Note"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_scan_delivery_note_barang_masuk"
                    style="?android:textAppearanceSmall"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_alignParentRight="true"
                    android:text="SCAN"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    app:cornerRadius="5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center">

                    <EditText
                        android:id="@+id/detail_id_barang_masuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Item Code"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_scan_item_barang_masuk"
                    style="?android:textAppearanceSmall"
                    android:layout_width="90dp"
                    android:layout_height="67dp"
                    android:layout_alignParentRight="true"
                    android:text="SCAN"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    app:cornerRadius="5dp" />

                <Button
                    android:id="@+id/btn_check_item_barang_masuk"
                    style="?android:textAppearanceSmall"
                    android:layout_width="90dp"
                    android:layout_height="66dp"
                    android:layout_alignParentRight="true"
                    android:text="CHECK"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    app:cornerRadius="5dp" />
            </RelativeLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/detail_nama_barang_masuk_parent"
                android:visibility="gone"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/detail_nama_barang_masuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Item Name "
                    android:focusable="false"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/detail_jumlah_barang_masuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Jumlah"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txt_error_barangMasuk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:gravity="right"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Error Message !"
                android:textColor="#ff3030"
                android:textSize="13dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_detail_konfirmasi_barang_masuk"
                style="?android:textAppearanceSmall"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:text="KONFIRMASI"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="15dp" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp">

        <Button
            android:id="@+id/btn_selesai_barang_masuk"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:text="SELESAI"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="15dp" />
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_menu"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:foregroundGravity="bottom"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu" />

</FrameLayout>